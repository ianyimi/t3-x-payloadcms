		"next": "15.4.2-canary.9",
		"payload": "^3.48.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"server-only": "^0.0.1",
		"sharp": "^0.34.1",
		"superjson": "^2.2.1",
		"tailwind-merge": "^3.3.1",
		"zod": "^4.0.5"
	},
