		"@payloadcms/richtext-lexical": "^3.48.0",
		"@payloadcms/ui": "^3.48.0",
		"@radix-ui/react-slot": "^1.2.3",
		"@t3-oss/env-nextjs": "^0.12.0",
		"@tanstack/react-query": "^5.69.0",
		"@trpc/client": "^11.0.0",
		"@trpc/react-query": "^11.0.0",
		"@trpc/server": "^11.0.0",
		"better-auth": "^1.3.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"graphql": "^16.10.0",
