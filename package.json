		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwindcss": "^4.0.15",
		"tw-animate-css": "^1.3.5",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.27.0"
	},
	"ct3aMetadata": {
		"initVersion": "7.39.3"
	},
	"packageManager": "pnpm@10.11.0",
	"pnpm": {
		"overrides": {
			"mongodb": "6.17.0",
			"payload": "^3.48.0",
			"@payloadcms/ui": "^3.48.0"
		}
