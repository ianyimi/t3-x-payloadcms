{
	"name": "t3-x-payloadcms",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "payload generate:types && next build",
		"check": "next lint && tsc --noEmit",
		"dev": "next dev --port=3001 --turbo",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
		"format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
		"payload:importmap": "payload generate:importmap",
		"payload:types": "PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
		"lint": "next lint",
		"lint:fix": "next lint --fix",
		"preview": "next build && next start",
		"start": "next start",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@daveyplate/better-auth-ui": "^2.0.14",
		"@payloadcms/db-mongodb": "^3.48.0",
		"@payloadcms/graphql": "^3.48.0",
